{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PostgresConnection": "Server=localhost:5432;User Id=postgres;Password=postgres;Database=kombats"
  },
  "Jwt": {
    "SecretKey": "cndcilnbflwejkrnfjr3243nflknf3r",
    "Issuer": "Kombats.Auth",
    "Audience": "Kombats.Auth",
    "AccessTokenExpirationMinutes": "15",
    "RefreshTokenExpirationDays": "30"
  },
  "OpenTelemetry": {
    "ServiceName": "kombats",
    "ServiceVersion": "1.0.0",
    "ApplicationInsightsConnectionString": null,
    "OtlpEndpoint": null,
    "EnableConsoleExporter": false,
    "EnableTracing": false,
    "EnableMetrics": false,
    "EnableAspNetCoreInstrumentation": true,
    "EnableHttpClientInstrumentation": true,
    "EnableSqlClientInstrumentation": true,
    "EnableRuntimeInstrumentation": true
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.ApplicationInsights"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "MassTransit": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "ApplicationInsights",
        "Args": {
          "connectionString": "",
          "telemetryConverter": "Serilog.Sinks.ApplicationInsights.TelemetryConverters.TraceTelemetryConverter, Serilog.Sinks.ApplicationInsights"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  },
  "MessageBus": {
    "Host": "localhost",
    "Port": 5672,
    "VirtualHost": "/",
    "Username": "guest",
    "Password": "guest",

    "RetryCount": 3,
    "RetryIntervalSeconds": 5,
    "ConcurrentMessageLimit": 10,
    "PrefetchCount": 20
  }
}
